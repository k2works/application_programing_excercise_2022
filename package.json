{
  "name": "ape_2022",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "start": "nf start -j Procfile.dev",
    "app": "webpack server --config ./webpack.config.js --open",
    "api": "cross-env node_env=production ts-node ./src/server.ts",
    "api:dev": "cross-env node_env=development PORT=3000 ts-node-dev ./src/server.ts",
    "test": "jest --coverage",
    "test:e2e": "cypress run",
    "test:e2e:ci": "cypress run --record --key cfde91db-07b4-4384-b1c6-c3aed07749c9",
    "test:cypress": "cypress open",
    "watch": "webpack --watch --config webpack.config.js",
    "build": "npm-run-all clean build:*",
    "build:webpack": "cross-env NODE_ENV=production webpack --config webpack.config.js",
    "build:report": "npm-run-all report:cucumber:generate report:cucumber:report",
    "build:docs": "npm-run-all docs:*",
    "deploy:local": "vercel dev",
    "deploy:vercel": "vercel",
    "deploy:heroku": "git push heroku take8:main",
    "deploy": "npm-run-all deploy:*",
    "clean": "rimraf ./public",
    "report:cucumber": "npm-run-all report:cucumber:clean test:e2e report:cucumber:generate report:cucumber:report",
    "report:cucumber:generate": "node scripts/cucumber_generate.js",
    "report:cucumber:report": "node scripts/cucumber_report.js",
    "report:cucumber:clean": "rimraf public/report && rimraf cypress/cucumber-json",
    "docs:spec": "typedoc --tsconfig ./scripts/tsconfig.json  --out ./public/spec ./src/api/Todo.ts",
    "docs:uml": "tplant --input ./src/api/**/*.ts --output ./docs/uml.svg",
    "docs:copy": "cpx ./docs/* ./public/spec/docs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/k2works/tdd_metu.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/k2works/tdd_metu/issues"
  },
  "homepage": "https://github.com/k2works/tdd_metu#readme",
  "devDependencies": {
    "@babel/cli": "^7.12.1",
    "@babel/core": "^7.17.8",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-react": "^7.16.7",
    "@babel/register": "^7.12.1",
    "@types/jest": "^27.4.1",
    "@types/react": "^17.0.43",
    "@types/react-dom": "^17.0.14",
    "babel-loader": "^8.2.4",
    "cpx": "^1.5.0",
    "css-loader": "^6.7.1",
    "cucumber-html-reporter": "^5.5.0",
    "cypress-cucumber-preprocessor": "^4.3.1",
    "fake-indexeddb": "^3.1.7",
    "foreman": "^3.0.1",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^27.5.1",
    "marked": "^1.2.2",
    "npm-run-all": "^4.1.5",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "rimraf": "^3.0.2",
    "style-loader": "^3.3.1",
    "tplant": "^3.1.0",
    "ts-jest": "^27.1.3",
    "ts-loader": "^9.2.8",
    "ts-node-dev": "^1.1.8",
    "typedoc": "^0.4.5",
    "typedoc-plantuml": "^1.4.1",
    "typescript": "^4.5.5",
    "watch": "^1.0.2",
    "webpack": "^5.70.0",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.7.4"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.8.1",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/node": "^14.18.10",
    "better-sqlite3": "^7.5.1",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "cypress": "^9.4.1",
    "dexie": "^3.2.1",
    "express": "^4.17.3",
    "react-redux": "^7.2.8",
    "reflect-metadata": "^0.1.13",
    "ts-node": "^10.5.0",
    "typeorm": "^0.3.5",
    "uuid": "^8.3.2"
  },
  "cypress-cucumber-preprocessor": {
    "step_definitions": "cypress/support/step_definitions/",
    "nonGlobalStepDefinitions": false,
    "cucumberJson": {
      "generate": true,
      "outputFolder": "cypress/cucumber-json",
      "filePrefix": "",
      "fileSuffix": ".cucumber"
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/**/*.test.ts"
    ],
    "testEnvironment": "jsdom"
  }
}
