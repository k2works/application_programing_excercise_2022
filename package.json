  "devDependencies": {
    "@babel/cli": "^7.12.1",
    "@babel/core": "^7.17.8",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-react": "^7.16.7",
    "@babel/register": "^7.12.1",
    "@types/jest": "^27.4.1",
    "@types/react": "^17.0.43",
    "@types/react-dom": "^17.0.14",
    "babel-loader": "^8.2.4",
    "cpx": "^1.5.0",
    "css-loader": "^6.7.1",
    "cucumber-html-reporter": "^5.5.0",
    "cypress-cucumber-preprocessor": "^4.3.1",
    "fake-indexeddb": "^3.1.7",
    "foreman": "^3.0.1",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^27.5.1",
    "marked": "^1.2.2",
    "npm-run-all": "^4.1.5",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "rimraf": "^3.0.2",
    "style-loader": "^3.3.1",
    "ts-jest": "^27.1.3",
    "ts-loader": "^9.2.8",
    "ts-node": "^10.5.0",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.5.5",
    "watch": "^1.0.2",
    "webpack": "^5.70.0",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.7.4"
  },
  "dependencies": {
    "cypress": "^9.4.1",
    "dexie": "^3.2.1"
  },
  "cypress-cucumber-preprocessor": {
    "step_definitions": "cypress/support/step_definitions/",
    "nonGlobalStepDefinitions": false,
    "cucumberJson": {
      "generate": true,
      "outputFolder": "cypress/cucumber-json",
      "filePrefix": "",
      "fileSuffix": ".cucumber"
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/**/*.test.ts"
    ],
    "testEnvironment": "jsdom"
  }
